<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_Mechanical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/colorOffWhiteBg"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView_Sub_Category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/margin_medium"
                    android:textColor="@color/colorAccent"
                    android:text="@string/mechanical"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_small"
                    />


                <TextView
                    android:id="@+id/textView_Cost"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Rs. 250"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_medium"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView_Total_Exams"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="100 Tests"
                    android:gravity="start|center"
                    android:textSize="15sp"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:textColor="@color/colorOffWhiteBg"
                    />

                <Button
                    android:id="@+id/button_Buy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Buy"
                    android:background="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textColor="@color/colorOffWhiteBg"
                    />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

