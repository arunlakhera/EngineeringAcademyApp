<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_Question"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_default"
    android:layout_width="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView_Ans_Ques_Number"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_width="match_parent"
        android:padding="@dimen/padding_small"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/textView_Ans_Question"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_width="match_parent"
        android:padding="@dimen/padding_small"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_small" />

    <CheckBox
        android:id="@+id/checkbox_Answer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Answer 1"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:onClick="onTextCheckBoxClicked"
        />

    <CheckBox
        android:id="@+id/checkbox_Answer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Answer 2"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:onClick="onTextCheckBoxClicked"
        />

    <CheckBox
        android:id="@+id/checkbox_Answer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Answer 3"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:onClick="onTextCheckBoxClicked"
        />

    <CheckBox
        android:id="@+id/checkbox_Answer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Answer 4"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:onClick="onTextCheckBoxClicked"
        />


    <TextView
        android:id="@+id/textView_Ans_Explaination"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_width="match_parent"
        android:padding="@dimen/padding_small"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_small" />

</LinearLayout>
