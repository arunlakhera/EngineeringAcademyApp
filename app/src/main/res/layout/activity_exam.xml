<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ExamActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:scaleType="centerCrop"
        android:src="@drawable/ea_bg"
        android:alpha="0.8"
        />

    <!-- Replace with Recycler view horizontal-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_question_List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorAccent"
        android:scrollbars="horizontal"
        android:background="@drawable/nav_base"
        android:layout_below="@id/toolbar"
        />

    <LinearLayout
        android:id="@+id/layout_Information"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/course_red_bg"
        android:layout_below="@id/recyclerView_question_List"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_Current_Question"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_small"
            android:gravity="center"
            android:text="3/10"
            android:textColor="@color/colorOffWhiteBg"
            android:textSize="@dimen/text_small" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/textView_Time_Remaining"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_small"
                android:gravity="center"
                android:text="00:45 min"
                android:textColor="@color/colorOffWhiteBg"
                android:textSize="@dimen/text_small" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_Info"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_small"
             />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_Information"
        android:layout_above="@id/layout_Bottom"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_Question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin_default"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/margin_default"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginRight="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    >
                    <Button
                        android:id="@+id/button_Eng"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_red_flat"
                        android:text="English"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/colorOffWhiteBg"
                        />
                    <Button
                        android:id="@+id/button_Hindi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_flat"
                        android:text="Hindi"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/colorOffWhiteBg"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView_Question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:layout_marginLeft="@dimen/margin_default"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginRight="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:background="@drawable/question_base"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_small"
                    android:text="Question:"
                    android:scrollbars="vertical"
                    />

                <ImageView
                    android:id="@+id/imageview_QuestionSupported"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:padding="@dimen/padding_small"
                    android:layout_marginLeft="@dimen/margin_default"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginRight="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_default"
                    android:background="@drawable/question_base"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_small"
                    android:text="Question:"
                    android:scrollbars="vertical"
                    android:scaleType="fitXY"
                    />

                <LinearLayout
                    android:id="@+id/layout_Answers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_default"
                    android:background="@drawable/question_base"
                    android:orientation="vertical"
                    >

                    <CheckBox
                        android:id="@+id/checkbox_Answer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Answer 1"
                        android:textSize="20sp"
                        android:layout_margin="8dp"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_Answer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Answer 2"
                        android:textSize="20sp"
                        android:layout_margin="8dp"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_Answer3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Answer 3"
                        android:textSize="20sp"
                        android:layout_margin="8dp"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_Answer4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Answer 4"
                        android:textSize="20sp"
                        android:layout_margin="8dp"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_Answer5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Answer 5"
                        android:textSize="20sp"
                        android:layout_margin="8dp"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_Answer6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Answer 6"
                        android:textSize="20sp"
                        android:layout_margin="8dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_Bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/nav_base"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_default"
        >

        <Button
            android:id="@+id/button_Previous"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/nav_prev" />

        <Button
            android:id="@+id/button_Submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_signin"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            />
        <Button
            android:id="@+id/button_Next"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/nav_next" />
    </LinearLayout>
</RelativeLayout>