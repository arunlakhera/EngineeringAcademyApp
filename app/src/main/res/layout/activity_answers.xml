<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AnswersActivity">

    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbar"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ea_bg"
        android:layout_below="@id/toolbar"
        android:scaleType="fitXY"
        android:alpha="0.8"
        />

    <TextView
        android:id="@+id/textView_Ans_Title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/toolbar"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/graph_base"
        android:gravity="center"
        android:text="Exam 01 Result"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_medium" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_Ans_Answers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView_Ans_Title"
        android:layout_above="@id/layout_Bottom"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_default"
        android:background="@drawable/answer_base"
        />

    <RelativeLayout
        android:id="@+id/layout_Bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_red_base"
        >

        <Button
            android:id="@+id/button_Ans_Download"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/download"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <Button
            android:id="@+id/button_Ans_Share"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/share_bg"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end|center"
            />

    </RelativeLayout>
</RelativeLayout>